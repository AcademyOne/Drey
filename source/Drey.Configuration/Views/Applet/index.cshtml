@inherits NancyRazorViewBase<Drey.Configuration.Services.ViewModels.AppletDashboardPmo>
@{
    var faBase = "fa fa-fw fa-3x";
}
<h1>Service Panel</h1>

<p>The following applications are installed in this runtime.</p>

<h2>@Model.Title - @Model.Version</h2>

<h3>Applet Settings</h3>

<div class="btn-group">
    <a href="~/applet/@Model.Id/appSetting/new" class="btn btn-default">New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Drey.Configuration.Services.ViewModels.AppletDashboardPmo.AppletSetting appSetting in Model.AppSettings)
        {
            <tr>
                <td><a href="~/applet/@Model.Id/appSetting/@appSetting.Key/Edit">@appSetting.Key</a></td>
                <td>@appSetting.Value</td>
            </tr>
        }

    </tbody>

</table>

<h3>Connection Strings</h3>

<div class="btn-group">
    <a href="~/applet/@Model.Id/connectionStrings/new" class="btn btn-default">New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Provider Name</th>
            <th>Connection String</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Drey.Configuration.Services.ViewModels.AppletDashboardPmo.AppletConnectionString connStr in Model.ConnectionStrings)
        {
            <tr>
                <td><a href="~/applet/@Model.Id/connectionStrings/@connStr.Name/Edit">@connStr.Name</a></td>
                <td>@connStr.ProviderName</td>
                <td>@connStr.ConnectionString</td>
            </tr>
        }
    </tbody>

</table>