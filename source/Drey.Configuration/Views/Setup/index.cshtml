@inherits NancyRazorViewBase<Drey.Configuration.Services.ViewModels.GlobalSettingsPmo>
@{
    ViewBag.Title = "Global Settings";
}
@Html.Partial("Shared/ValidationSummary")
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">Global Settings</div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="ServerHostname">Connection Hostname</label>
                        <input name="ServerHostname" class="form-control" value="@Model.ServerHostname" />
                    </div>
                    <div class="form-group">
                        <label for="SSLThumbprint">Self-Signed SSL Certificate thumbprint</label>
                        <input name="SSLThumbprint" class="form-control" value="@Model.SSLThumbprint" />
                        <p class="help-block">
                            If your setup instructions dictate that the <strong>server</strong> you will be connecting to is
                            using a self-signed certificate, provide the thumbprint within the instructions here.  Otherwise,
                            leave this blank and only CA-issued certificates will be trusted.
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="SSLPfx">Client Certificate</label>
                        <input type="file" name="SSLPfx" class="form-control" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>